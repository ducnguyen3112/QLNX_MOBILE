<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activity.KhachHang.AddKHActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_baseline_account_circle" />

        <TextView
            android:id="@+id/txtChooseImgae"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm ảnh đại diện" />
    </LinearLayout>

    <TextView
        style="@style/custom_text_view"
        android:text="Tên Khách Hàng" />

    <EditText
        android:id="@+id/edtAddNameKH"
        style="@style/custom_edit_text"
        android:background="@drawable/custom_edit_text"
        android:drawableStart="@drawable/custom_person_icon"
        android:hint="Nhập Khách Hàng" />

    <TextView
        style="@style/custom_text_view"
        android:text="Địa chỉ" />

    <EditText
        android:id="@+id/edtAddAddressKH"
        style="@style/custom_edit_text"
        android:background="@drawable/custom_edit_text"
        android:drawableStart="@drawable/custom_location_on_icon"
        android:hint="Nhập Địa Chỉ" />

    <TextView
        style="@style/custom_text_view"
        android:text="Số điện thoại" />

    <EditText
        android:id="@+id/edtAddPhoneKH"
        style="@style/custom_edit_text"
        android:background="@drawable/custom_edit_text"
        android:drawableStart="@drawable/custom_local_phone_icon"
        android:hint="Nhập Điện Thoại" />

    <TextView
        style="@style/custom_text_view"
        android:text="Email" />

    <EditText
        android:id="@+id/edtAddEmailKH"
        style="@style/custom_edit_text"
        android:background="@drawable/custom_edit_text"
        android:drawableStart="@drawable/custom_email_icon"
        android:hint="Nhập Email" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAddKH"
            style="@style/custom_button_2"
            android:background="@drawable/custom_button_2"
            android:text="Them"
            android:textColor="@drawable/custom_button_2"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnCancelAddKH"
            style="@style/custom_button_2"
            android:background="@drawable/custom_button_3"
            android:text="Huy"
            android:textColor="@drawable/custom_button_3"
            android:textSize="16sp" />

    </LinearLayout>


</LinearLayout>