<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activity.Employee.AddEmployeeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivAvatarE"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_baseline_account_circle" />

        <TextView
            android:id="@+id/txtChooseImageE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm ảnh đại diện" />
    </LinearLayout>

    <TextView
        style="@style/custom_text_view"
        android:text="Tên Nhân Viên" />

    <EditText
        android:id="@+id/edtAddNameE"
        style="@style/custom_edit_text"
        android:background="@drawable/custom_edit_text"
        android:drawableStart="@drawable/custom_person_icon"
        android:hint="Nhập Nhân Viên" />

    <TextView
        style="@style/custom_text_view"
        android:text="Địa chỉ" />

    <EditText
        android:id="@+id/edtAddAddressE"
        style="@style/custom_edit_text"
        android:background="@drawable/custom_edit_text"
        android:drawableStart="@drawable/custom_location_on_icon"
        android:hint="Nhập Địa Chỉ" />

    <TextView
        style="@style/custom_text_view"
        android:text="Số điện thoại" />

    <EditText
        android:id="@+id/edtAddPhoneE"
        style="@style/custom_edit_text"
        android:background="@drawable/custom_edit_text"
        android:drawableStart="@drawable/custom_local_phone_icon"
        android:hint="Nhập Điện Thoại" />

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:calendarViewShown="false"
        android:datePickerMode="spinner" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAddE"
            style="@style/custom_button_2"
            android:background="@drawable/custom_button_2"
            android:text="Them"
            android:textColor="@drawable/custom_button_2"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnCancelAddE"
            style="@style/custom_button_2"
            android:background="@drawable/custom_button_3"
            android:text="Huy"
            android:textColor="@drawable/custom_button_3"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>